{{!-- HTML for handlebars to render to --}}
<div class="container">
  <div class="row burger-display">
    {{!-- Available burgers list --}}
    <div class="col options">
      <h2>Pick a Burger!</h2>

      <ul>
        {{#each burger}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- Devoured burgers list --}}
    <div class="col eaten">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  {{!-- Make a burger input --}}
  <div class="row">
    <div class="col-md-6 mx-auto make-burger-col">
      <h3>Make a New Burger</h3>
      <form class="burger-form">
        <div>
          <input type="text" id="burger" name="burger_name">
          <button type="submit" class="btn btn-secondary make-burger-btn"><img src="/public/pictures/submit burger.jpg" alt="Smilling burger" class="SmillingBurger"></button>
        </div>
      </form>
    </div>
  </div>
</div>

